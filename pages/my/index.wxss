.my-info {
    width: 100%;
    text-align: center;
    border-bottom: 10px solid #f5f5f5;
    padding-bottom: 15px;
}

.my-info .avatar {
    width: 88px;
    height: 88px;
    border-radius: 50%;
    overflow: hidden;
    display: block;
    margin: 0 auto;
}

.my-info .my-info-name {
    color: #293539;
    font-size: 38rpx;
    margin-top: 5px;
    position: relative;
}

.my-info .my-info-name text {
    width: 5px;
    height: 5px;
    position: absolute;
    border: 2px solid #a78845;
    border-radius: 50%;
    margin-left: 5px;
}

.my-info-order {
    width: 95%;
    text-align: center;
    margin: 0 auto;
    margin-top: 30px;
}

.my-info-order .list-icon {
    display: inline-block;
    width: 25%;
    position: relative;
}

.my-info-order .list-icon .red-dot {
    width: 9px;
    height: 9px;
    border-radius: 50%;
    position: absolute;
    right: 15px;
    background-color: #ff3f3e;
}

.my-info-order .list-icon text {
    display: block;
    font-size: 22rpx;
    color: #293539;
}

.my-info-order .list-icon image {
    width: 28px;
    height: 28px;
}

.my-item-list {
}

.my-item-list .my-item {
    width: 100%;
    height: 60px;
    border-bottom: 1px dashed #f5f5f5;
    line-height: 60px;
    font-size: 32rpx;
    color: #293539;
    position: relative;
    font-weight: 300;
}

.my-item-list .my-item text {
    width: 5px;
    height: 5px;
    position: absolute;
    border: 1px solid #a78845;
    border-radius: 50%;
    left: 15px;
    bottom: 25px;
}

.my-item-list .my-item navigator {
    display: inline-block;
    margin-left: 35px;
    width: 90%;
}

.my-item-list .my-item .about {
    display: inline-block;
    margin-left: 35px;
    width: 90%;
}

.my-item-list .my-item image {
    width: 20px;
    height: 20px;
    float: right;
    margin-top: 20px;
    margin-right: 15px;
    position: absolute;
    right: 0;
}

.show-pop {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(255,255,255,.8);
}

.show-pop .show-pop-box {
    width: 450rpx;
    margin: 0 auto;
    margin-top: 30%;
    background-color: #fff;
    border-radius: 10rpx;
    text-align: center;
    position: relative;
    padding-bottom: 20px;
    padding-top: 30px;
    padding-left: 15px;
    padding-right: 15px;
    box-shadow: 0px 2px 15px #eee;
}

.show-pop-box .close {
    width: 35px;
    height: 35px;
    position: absolute;
    right: 0;
    top: 0;
}

.show-pop .show-pop-box .show-pop-title {
    color: #a78845;
    font-size: 36rpx;
    font-weight: 300;
    position: relative;
}

.show-pop .show-pop-box .show-pop-title .r {
    width: 5px;
    height: 5px;
    position: absolute;
    border: 1px solid #a78845;
    border-radius: 50%;
    margin-left: 10px;
    margin-top: 10px;
}

.show-pop .show-pop-box .show-pop-title .l {
    width: 5px;
    height: 5px;
    position: absolute;
    border: 1px solid #a78845;
    border-radius: 50%;
    margin-left: -15px;
    margin-top: 10px;
}

.show-pop .show-pop-box .show-pop-text {
    margin-top: 10px;
    color: #293539;
    font-size: 30rpx;
    line-height: 28px;
    font-weight: 300;
}