.HotName {
    font-size: 66rpx;
    margin-left: 20px;
    color: #293539;
    font-weight: 300;
    position: relative;
}

.HotName text {
    width: 7px;
    height: 7px;
    position: absolute;
    border: 2px solid #a78845;
    border-radius: 50%;
}

.to-pay-box {
    width: 100%;
    display: block;
    margin-top: 20px;
}

.address-box {
    width: 100%;
    height: 75px;
    border-bottom: 10px solid #f5f5f5;
}

.show-address {
    width: 100%;
    height: 75px;
    font-weight: 300;
}

.show-address .name-tel {
    float: left;
    margin-left: 15px;
    color: #293539;
    font-size: 36rpx;
    width: 80%;
}

.show-address .addr-text {
    float: left;
    width: 80%;
    margin-left: 15px;
    color: #979d9f;
    font-size: 30rpx;
    margin-top: 10px;
}

.show-address .add-right {
    width: 20px;
    height: 20px;
    margin-top: 25px;
    margin-left: 20px;
}

.add-address {
    width: 100%;
    height: 75px;
    line-height: 75px;
}

.add-address .title {
    margin-left: 15px;
    color: #293539;
    font-size: 36rpx;
    font-weight: 300;
    float: left;
    width: 80%;
}

.add-address .add-right {
    width: 20px;
    height: 20px;
    margin-top: 30px;
    margin-left: 20px;
}

.goods-list {
    width: 100%;
}

.goods-list .a-goods {
    width: 100%;
    height: 80px;
    border-bottom: 1px dashed #f5f5f5;
    padding-top: 10px;
    padding-bottom: 10px;
}

.goods-list .a-goods .img-box {
    width: 80px;
    height: 80px;
    float: left;
    margin-left: 15px;
    background-color: #f5f5f5;
    border-radius: 6rpx;
}

.goods-list .a-goods .img-box .img {
    width: 80px;
    height: 80px;
}

.goods-list .a-goods .text-box {
    float: left;
    width: 70%;
    margin-left: 10px;
}

.goods-list .a-goods .text-box .arow01 .goods-name {
    font-size: 36rpx;
    color: #293539;
    font-weight: 300;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.goods-list .a-goods .text-box .arow01 .goods-label {
    color: #979d9f;
    font-size: 30rpx;
    font-weight: 300;
    margin-top: 3px;
    height: 21px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.goods-list .a-goods .text-box .arow01 .goods-price {
    color: #a78845;
    margin-top: 3px;
    font-size: 40rpx;
    font-weight: 300;
    float: left;
}

.goods-list .a-goods .text-box .arow01 .goods-price text {
    font-size: 28rpx;
    padding-right: 3px;
}

.goods-list .a-goods .text-box .arow01 .goods-num {
    color: #979d9f;
    float: right;
    margin-right: 1px;
    margin-top: 3px;
    font-size: 40rpx;
    font-weight: 300;
}

.goods-list .a-goods .text-box .arow01 .goods-num text {
    padding-right: 3px;
    font-size: 30rpx;
}

.peisong-way {
    width: 100%;
    margin-top: 10px;
}

.peisong-way .row-box-yun {
    width: 100%;
    height: 30px;
    line-height: 30px;
    border-bottom: 1px dashed #f5f5f5;
    padding-bottom: 8px;
}

.peisong-way .row-box-yun .row-label {
    float: left;
    margin-left: 15px;
    color: #293539;
    font-size: 32rpx;
    font-weight: 300;
}

.peisong-way .row-box-yun .right-text {
    float: right;
    margin-right: 15px;
    color: #979d9f;
    font-size: 30rpx;
    font-weight: 300;
}

.peisong-way .row-box {
    width: 100%;
    height: 30px;
    line-height: 30px;
    border-bottom: 1px dashed #f5f5f5;
    padding-bottom: 8px;
    margin-top: 8px;
}

.peisong-way .row-box .liuyan {
    width: 93%;
    margin: 0 auto;
    color: #293539;
    font-size: 30rpx;
    font-weight: 300;
    height: 30px;
}

.peisong-way-noc {
    width: 100%;
    position: relative;
}

.peisong-way-noc .row-box {
    width: 50%;
    display: inline-block;
}

.peisong-way-noc .row-box picker-view {
    width: 100%;
    height: 90px;
    font-size: 36rpx;
    color: #293539;
    margin-top: 15px;
}

.peisong-way-noc .row-box picker-view picker-view-column view {
    line-height: 50px;
    margin-left: 15px;
}

.peisong-way-noc .row-info {
    width: 40%;
    position: absolute;
    right: 15px;
    top: 10px;
    height: 110px;
    line-height: 110px;
    text-align: center;
    color: #a78845;
    font-size: 36rpx;
    font-weight: 300;
}

.peisong-way-noc .row-info text {
    font-size: 44rpx;
    padding-left: 3px;
}

.goods-info {
    margin-top: 10px;
    width: 100%;
    border-top: 1px dashed #f5f5f5;
    padding-top: 10px;
}

.goods-info .row-box {
    width: 100%;
    height: 35px;
}

.goods-info .row-box .row-label {
    float: left;
    margin-left: 15px;
    color: #293539;
    font-size: 32rpx;
    font-weight: 300;
}

.goods-info .row-box .right-text {
    float: right;
    margin-right: 15px;
    font-size: 30rpx;
    color: #979d9f;
    font-weight: 300;
}

.goods-info .row-box .right-text text {
    font-size: 24rpx;
    margin-right: 3px;
}

.jiesuan-box .left-price .row-label {
    float: left;
    margin-left: 15px;
    color: #a78845;
    font-size: 34rpx;
    font-weight: 300;
}

.jiesuan-box {
    margin-bottom: 60px;
}

.jiesuan-box .left-price {
    width: 100%;
    height: 40px;
}

.jiesuan-box .left-price .right-text {
    float: right;
    margin-right: 15px;
    font-size: 32rpx;
    font-weight: 300;
    color: #a78845;
}

.jiesuan-box .left-price .right-text text {
    font-size: 24rpx;
    margin-right: 3px;
}

.to-pay-btn {
    color: #fff;
    background-color: #a78845;
    width: 100%;
    border-radius: 0;
    height: 45px;
    line-height: 45px;
    font-size: 32rpx;
    font-weight: 300;
    position: fixed;
    bottom: 0;
}

.to-pay-btn::after {
    border-radius: 0;
    border: 0;
}