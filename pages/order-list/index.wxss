.container {
    width: 100%;
}

.HotName {
    font-size: 90rpx;
    margin-left: 20px;
    color: #293539;
    font-weight: 300;
    position: relative;
}

.HotName text {
    width: 7px;
    height: 7px;
    position: absolute;
    border: 2px solid #a78845;
    border-radius: 50%;
}

.status-box {
    width: 100%;
    height: 50px;
    line-height: 50px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 10px;
    border-bottom: 1px solid #f5f5f5;
}

.status-box .status-label {
    width: 150rpx;
    height: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #293539;
    box-sizing: border-box;
    position: relative;
    font-weight: 300;
}

.status-box .status-label.active {
    color: #a78845;
    border-bottom: 1px solid #a78845;
}

.status-box .status-label .red-dot {
    width: 9px;
    height: 9px;
    position: absolute;
    left: 130rpx;
    top: 15rpx;
    background-color: #ff3f3e;
    border-radius: 50%;
}

.no-order {
    width: 100%;
    padding-top: 280rpx;
    text-align: center;
    font-size: 42rpx;
    color: #c5c9ca;
    margin-bottom: 50rpx;
    font-weight: 300;
}

.order-list {
    width: 100%;
    margin-top: 20px;
}

.order-list .a-order {
    width: 100%;
    background-color: #fff;
    border-bottom: 10px solid #f5f5f5;
}

.order-list .a-order .order-date {
    height: 45px;
    width: 95%;
    margin: 0 auto;
    font-size: 30rpx;
    color: #293539;
    font-weight: 300;
    line-height: 45px;
}

.order-list .a-order .order-date .date-box {
    float: left;
}

.order-list .a-order .order-date .red {
    font-size: 30rpx;
    color: #ff3f3e;
    float: right;
}

.order-list .a-order .order-date .status {
    font-size: 30rpx;
    color: #c5c9ca;
    float: right;
}

.goods-list-box {
    width: 100%;
    height: 98px;
    border-top: 1px dashed #f5f5f5;
    border-bottom: 1px dashed #f5f5f5;
}

.goods-img-container {
    width: 95%;
    margin: 0 auto;
    margin-top: 15px;
}

.goods-info .img-box {
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    margin-right: 30rpx;
    background-color: #f7f7f7;
}

.goods-info .img-box .goods-img,.goods-img-container .img-box .goods-img {
    width: 120rpx;
    height: 120rpx;
}

.goods-info .goods-des {
    width: 540rpx;
    height: 78rpx;
    line-height: 39rpx;
    font-size: 26rpx;
    color: #000000;
    overflow: hidden;
}

.goods-img-container {
    height: 150rpx;
    box-sizing: border-box;
    white-space: nowrap;
}

.goods-img-container .img-box {
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    margin-right: 20rpx;
    background-color: #f5f5f5;
    display: inline-block;
    border-radius: 6rpx;
}

.order-list .a-order .price-box {
    width: 95%;
    height: 55px;
    font-size: 28rpx;
    margin: 0 auto;
    line-height: 55px;
}

.order-list .a-order .price-box .total-price {
    font-size: 30rpx;
    color: #a78845;
    float: left;
    height: 45px;
    font-weight: 300;
}

.a-order .price-box .cancel-btn {
    border: 1rpx solid #eee;
    float: right;
    width: 85px;
    height: 30px;
    line-height: 30px;
    text-align: center;
    border-radius: 6rpx;
    margin-top: 10px;
    color: #c5c9ca;
    font-weight: 300;
    margin-right: 10px;
}

.a-order .price-box .topay-btn {
    border: 1px solid #a78845;
    color: #a78845;
    float: right;
    width: 85px;
    height: 30px;
    text-align: center;
    margin-top: 10px;
    border-radius: 6rpx;
    line-height: 30px;
    font-weight: 300;
}