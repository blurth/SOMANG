.HotName {
    font-size: 66rpx;
    margin-left: 20px;
    color: #293539;
    font-weight: 300;
    position: relative;
}

.HotName text {
    width: 7px;
    height: 7px;
    position: absolute;
    border: 2px solid #a78845;
    border-radius: 50%;
}

.goods-fav-box {
    width: 100%;
    margin-top: 15px;
}

.goods-fav-box .goods-box {
    display: inline-block;
    width: 45%;
    background-color: #f5f5f5;
    margin-left: 13px;
    border-radius: 10rpx;
    margin-bottom: 15px;
}

.goods-fav-box .goods-box image {
    width: 100%;
}

.no-more-goods {
    width: 100%;
    padding-top: 280rpx;
    text-align: center;
    font-size: 42rpx;
    color: #c5c9ca;
    margin-bottom: 50rpx;
    font-weight: 300;
}