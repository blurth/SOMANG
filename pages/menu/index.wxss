.HotName {
    font-size: 90rpx;
    margin-left: 20px;
    color: #293539;
    font-weight: 300;
    position: relative;
}

.HotName text {
    width: 7px;
    height: 7px;
    position: absolute;
    border: 2px solid #a78845;
    border-radius: 50%;
}

.menu-box {
    width: 80%;
    margin: 0 auto;
    margin-top: 20px;
}

.menu-box-list {
    text-align: center;
    margin-bottom: 15px;
}

.menu-box-list .menu-list-title {
    color: #6a7275;
    font-size: 40rpx;
    font-weight: 300;
    letter-spacing: 10px;
    position: relative;
}

.menu-box-list .hover {
    color: #a78845;
}

.menu-box-list .hover .l {
    width: 5px;
    height: 5px;
    position: absolute;
    border: 1px solid #a78845;
    border-radius: 50%;
    margin-left: -19px;
    margin-top: 15px;
}

.menu-box-list .hover .r {
    width: 5px;
    height: 5px;
    position: absolute;
    border: 1px solid #a78845;
    border-radius: 50%;
    margin-left: 3px;
    margin-top: 15px;
}

.menu-list-pro {
    overflow-x: scroll;
    margin-top: 20px;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.menu-list-pro image {
    width: 70px;
    height: 70px;
    background-color: #f5f5f5;
    margin-right: 10px;
    border-radius: 5px;
}