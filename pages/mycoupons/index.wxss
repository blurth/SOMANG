.HotName {
    font-size: 66rpx;
    margin-left: 20px;
    color: #293539;
    font-weight: 300;
    position: relative;
}

.HotName text {
    width: 7px;
    height: 7px;
    position: absolute;
    border: 2px solid #a78845;
    border-radius: 50%;
}

.coupons-list {
    width: 90%;
    margin: 0 auto;
    margin-bottom: 50px;
    margin-top: 25px;
}

.coupons-item {
    color: #a78845;
    font-size: 30rpx;
    background-color: #fff;
    margin-bottom: 20px;
    padding-top: 10px;
    border-radius: 6rpx;
    position: relative;
    border: 1px solid #f5f5f5;
}

.money-left {
    width: 120px;
    font-size: 60rpx;
    margin: 16px 0px;
    display: inline-block;
    text-align: center;
    font-weight: 300;
    float: left;
}

.money-left text {
    font-size: 28rpx;
    padding-left: 6px;
}

.money-right {
    margin: 15px 0px;
    display: inline-block;
}

.money-name {
    font-size: 36rpx;
    font-weight: 300;
}

.money-hold {
    font-size: 28rpx;
    color: #979d9f;
    margin-top: 5px;
    font-weight: 300;
}

.money-home {
    position: absolute;
    color: #979d9f;
    font-size: 26rpx;
    right: 15px;
    bottom: 9px;
    font-weight: 300;
}

.money-fooder {
    font-size: 26rpx;
    padding: 8px 10px;
    color: #c5c9ca;
    border-bottom-right-radius: 6rpx;
    border-bottom-left-radius: 6rpx;
    font-weight: 300;
    border-top: 1px solid #f5f5f5;
}

.bottom-box {
    position: fixed;
    bottom: 0;
    background-color: #fcfcfc;
    width: 100%;
    text-align: center;
    height: 48px;
    font-size: 30rpx;
    line-height: 48px;
    color: #b4282d;
    box-shadow: 0rpx 15rpx 15rpx 10rpx;
}

.bottom-box image {
    width: 20px;
    height: 20px;
    margin: -5px 0;
}

.no-more-goods {
    width: 100%;
    padding-top: 280rpx;
    text-align: center;
    font-size: 42rpx;
    color: #c5c9ca;
    margin-bottom: 50rpx;
    font-weight: 300;
}