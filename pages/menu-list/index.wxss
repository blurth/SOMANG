.HotName {
    font-size: 90rpx;
    margin-left: 20px;
    color: #293539;
    font-weight: 300;
    position: relative;
}

.HotName text {
    width: 7px;
    height: 7px;
    position: absolute;
    border: 2px solid #a78845;
    border-radius: 50%;
}

.menu-list-box {
    width: 100%;
    margin-top: 20px;
    margin-bottom: 20px;
}

.menu-list-box .menu-list-goods {
    width: 42%;
    display: inline-block;
    margin-left: 20px;
    margin-bottom: 15px;
}

.menu-list-box .menu-list-goods image {
    width: 100%;
    background-color: #f5f5f5;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
}

.menu-list-box .menu-list-goods .menu-list-goods-info {
    width: 100%;
    height: 55px;
}

.menu-list-box .menu-list-goods .menu-list-goods-info .goods-title {
    width: 95%;
    color: #293539;
    font-size: 32rpx;
    margin: 0 auto;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.menu-list-box .menu-list-goods .menu-list-goods-info .goods-money {
    padding-left: 5px;
    color: #a78845;
    font-size: 36rpx;
    margin-top: 3px;
    float: left;
}

.menu-list-box .menu-list-goods .menu-list-goods-info .goods-money text {
    font-size: 30rpx;
    padding-right: 2px;
}

.menu-list-box .menu-list-goods .menu-list-goods-info .goods-price {
    float: right;
    color: #c5c9ca;
    font-size: 22rpx;
    margin-top: 10px;
    margin-right: 5px;
    font-weight: 300;
}