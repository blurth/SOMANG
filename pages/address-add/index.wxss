.HotName {
    font-size: 66rpx;
    margin-left: 20px;
    color: #293539;
    font-weight: 300;
    position: relative;
}

.HotName text {
    width: 7px;
    height: 7px;
    position: absolute;
    border: 2px solid #a78845;
    border-radius: 50%;
}

.form-box {
    width: 95%;
    background-color: #fff;
    margin: 0 auto;
    margin-top: 22px;
    margin-bottom: 35px;
}

.row-wrap {
    width: 100%;
    height: 50px;
    line-height: 50px;
    border-bottom: 1px dashed #f5f5f5;
    font-size: 30rpx;
    font-weight: 300;
}

.row-wrap .label {
    color: #293539;
    float: left;
    width: 20%;
    height: 50px;
}

.row-wrap .label-right {
    height: 50px;
    line-height: 50px;
    float: left;
    width: 75%;
    color: #293539;
}

.row-wrap .label-right input {
    height: 100%;
    font-size: 28rpx;
}

.row-wrap .right-box {
    margin-right: 30rpx;
}

.arrow-right {
    width: 15rpx;
    height: 24rpx;
}

.addr-details {
    height: auto;
    padding: 30rpx 0;
    margin-left: 30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    font-size: 28rpx;
}

.addr-details .label {
    margin: auto 0 auto 0;
    width: 160rpx;
    color: #000;
}

.addr-details textarea {
    box-sizing: border-box;
    width: 480rpx;
    overflow: scroll;
}

picker {
    margin-right: 20rpx;
    float: left;
    width: 20%;
    height: 50px;
    overflow: hidden;
}

.hui {
    color: #c5c9ca;
}

.container button::after {
    border: 0;
    border-radius: 50rpx;
}

.container button {
    width: 70%;
    margin: 0 auto;
    margin-bottom: 10px;
    font-size: 32rpx;
    font-weight: 300;
    border-radius: 50rpx;
}

.save-btn {
    color: #fff;
    background-color: #a78845;
}

.wechat-btn {
    color: #fff;
    background-color: #62b900;
}

.cancel-btn {
    color: #979d9f;
}

.del-btn {
    color: #fff;
    background-color: #cab88f;
}